node {
    stage('Checkout') {
      git branch: 'main', url: 'https://github.com/rhashmi02/final-project.git'
    }
    stage('Grade build') {
      dir('rest-server') {
        withGradle {
          sh './gradle build -x test'
        }
      }
    }
    stage('Gradle test') {
      dir('rest-server') {
        sh 'java -jar build/libs/rest-server-0.0.1-SNAPSHOT.jar &'
	sh 'sleep 20'
        sh '/opt/gradle/gradle-7.6/bin/gradle build test'
      }
    }
}
